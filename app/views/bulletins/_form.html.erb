<%= form_for(@bulletin_post) do |f| %>
   <div class="form-group">
      <%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
   </div>
   
    <div class="form-group">
       <%= f.text_area :body, class: 'form-control', rows: 15, placeholder: 'Content' %>
     </div>
   
   <div class="d-flex flex-row float-right">
     <div class="p-2">
        <div class="action">
            <%= f.submit "Save Post", class: 'btn btn-primary' %>
         </div>
     </div>
     <div class="p-2">
        <%= link_to "Back", bulletins_path, class: 'btn btn-primary'%>
     </div>
   </div>
<% end %>
