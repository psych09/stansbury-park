<%= render 'shared/nav' %>

<div class="main-card-layout">
  <div class="card">
    <div class="row">
      <div class="col-md-7">
        <%= image_tag @bulletin_post.main_image, style: "width: 100%" %>
      </div>
      
      <div class="col-md-5">
        <h1><%= @bulletin_post.title %></h1>
        
        <hr>
      
        <%= @bulletin_post.body %>
      </div>
    </div>
    
    <div class="float-right">
      <%= link_to "Back", bulletins_path, class: 'btn btn-primary float-right' %>
    </div>
  </div>
</div>

